{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Compose",
            "type": "shell",
            "command": "docker compose up -d --build --pull always",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build account",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/repos/account"
            },
            "command": "npm install && npm run build"
        },
        {
            "label": "Build website",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/repos/website"
            },
            "command": "npm install && npm run build"
        }
    ]
}
